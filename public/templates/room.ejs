<div class="row rpsRoom">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="row gameButtons">
      <div class="col-md-2 col-sm-3 col-xs-4 leaveRoomBtn">
        <button class="btn btn-block leaveRoom" ng-click='leaveRoom()'>  
          <span>Leave Room</span>
        </button>
      </div>
      <div class="col-md-2 col-sm-3 col-xs-4 leaveGameBtn">
        <button class="btn btn-block leaveGame" ng-hide='isInGame' ng-click='leaveGame()'>
          <span>
            Stop Playing
          </span>
        </button>
      </div>
    </div>
    
    <div class="row playfield">
      <div class="col-xs-5 col-sm-4">
        <div id='playerOneBg' class="row">
          <div class="col-xs-2 col-sm-3 playerOneBgLeft">
          </div>
          <div class="col-xs-3 col-sm-2 playerOneBgCenter">
          </div>
          <div class="col-xs-1 col-sm-1 playerOneBgSpace">
          </div>
          <div class="col-xs-1 col-sm-3 playerOneBgRight">
          </div>
        </div>
        
        <div class="row">
          <div class="col-xs-4 col-sm-3" id="playerOne">
            {{playerOne}}
            this is the
          </div>
        </div>
      </div>
      
      <div id="vs" class="col-xs-1 col-sm-1">
        <span class="v">
          V
        </span>
        <span class="s">
          S
        </span>
      </div>

      <div class="col-xs-5 col-sm-4">

        <div class="row">
          <div class="col-xs-offset-8 col-xs-4 col-sm-3 col-sm-offset-8" id="playerTwo">
            {{playerTwo}}
          </div>
        </div>

        <div id='playerTwoBg' class="row">
          <div class="col-xs-1 col-sm-offset-2 col-sm-2 playerTwoBgLeft">
          </div>
          <div class="col-xs-1 col-sm-2 playerTwoBgSpace">
          </div>
          <div class="col-xs-3 col-sm-2 playerTwoBgCenter">
          </div>
          <div class="col-xs-2 col-sm-3 playerTwoBgRight">
          </div>
        </div>  
      </div>



    </div>

     
        <div id='playMessage'>
          {{victoryMessage}}
        </div>
        <div id='timer'></div>
        </div>


    

  </div>
</div>





<div class='contentRoom'>
  <div class='gameView'>
    <div class='game'>
   
    
      
      
    <!--   <div id='playfield'>
        <div id='playerOne' class='move'>{{playerOne}}
        </div>
        <span id='vs'>VS</span>
        <div id='playerTwo' class='move'>{{playerTwo}}
        </div>
        <div id='playMessage'>
          {{victoryMessage}}
        </div>
        <div id='timer'></div>
      </div> -->

      <div class='join' ng-hide="isInGame">
        <div class='joinInt' ng-click='joinGame()'>
          Join the Game!
        </div>
      </div>
    
  <!--     <div class='leaveGame' ng-show="isInGame">
        <div class="leaveGameInt" ng-click='leaveGame()'>
          Stop playing
        </div>
      </div> -->
      
      <div ng-show='isInGame'>
        <div id = 'buttons'>
          <div id='rock' ng-click = updatePlayers('Rock') class='gameButton'>&nbsp;</div>
          <div id='paper' ng-click = updatePlayers('Paper') class='gameButton'>&nbsp;</div>
          <div id='scissors' ng-click = updatePlayers('Scissors') class='gameButton'>&nbsp;</div>
          <div id='lizard' ng-click = updatePlayers('Lizard') class='gameButton'>&nbsp;</div>
          <div id='spock' ng-click = updatePlayers('Spock') class='gameButton'>&nbsp;</div>
        </div>
      </div>
    </div>


    <div class="sidebar">
      <h3>Chat</h3>
      <div id='messageSpace'>
        <ul id="messages"></ul>
      </div>
      <form class="chatForm" ng-submit='chatMsg()'>
        <input id="m" ng-model="chatMessage" name="chatMessage" autocomplete="off" placeholder="type message" /><button>Send</button>
      </form>
    </div>
  </div>
  
</div>