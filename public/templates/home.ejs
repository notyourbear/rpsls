<div class="container-fluid">
  
  <div class="row instrucs">
    <div ng-repeat="instruction in instructions" ng-class="addOffset($index)" class="col-md-2 col-sm-4 col-xs-6 instruction">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-2">
          <div class="fawesome-background">
            <i class="fa fa-{{instruction.fawesome}} fa-3x inst"></i>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="text-background">
            <div class="text">
              <h2>{{instruction.title}}</h2>
              <p>{{instruction.ins1}}</p>
              <p>{{instruction.ins2}}</p>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>

  <div class="row userName">
    <div class="col-xs-10 col-xs-offset-1">
      <div ng-hide="named">
        <h1>Create your username to start playing:</h1>
        <form class='form-inline' ng-submit="addName()">
          <input class='form-control' ng-model='userName' name='userName' placeholder='Enter a Username' type="text">
          <button class="btn" id='nameSubmit' type="submit" name="submit">Ok</button>
        </form>
      </div>
    

      <div ng-show="named" id='addRooms'>
        <h1>Join a room below or create your own:</h1>
        <div ng-show="createRoom" id='addRoomConfig'>
          <form class='form-inline' ng-submit='addRoom()'>
            <input class='form-control' ng-model='roomName' name='roomName' placeholder='Name your room' type='text'>
            <button class="btn" type="submit" name="submit">Ok</button>
            <!-- <input class='form-control' type='submit' name='submit' value='Create Room'> -->
          </form>
        </div>
      </div>
    </div>
    
  </div>


</div>
<div class='content'>

  

  <div id='games'>

    <div ng-repeat="(rooms, room) in allTheRooms ">
      <div class='gameRoomBorder'>
        <div class='gameRoom'>
          <div class='gameRoomTitle'>
            {{room.name}}
          </div>
          <div class='gamePeople'>
            people in room: {{room.people.length}}
          </div>
          <div ng-show='named' ng-click="checkRoom(room.id)" class="joinButton">
            Join Room
          </div>
        </div>
      </div>

    </div>


   
  </div>
</div>
