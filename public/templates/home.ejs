<div class='content'>
  <p>{{welcome}}</p>

  <div ng-hide="named">
    <form ng-submit="addName()">
      <input ng-model='userName' name='userName' placeholder='Enter a Username' type="text">
      <input type="submit" name="submit" value="submit">
    </form>
  </div>

  <div style='margin: 20px 0;' id='games'>
    
    <div ng-repeat="(rooms, room) in allTheRooms">
      <div class='gameRoom'>
        <div class='gameRoomTitle'>
          {{room.name}}
        </div>
        by: {{room.ownerUserName}}
        <div>
          people in room: {{room.people.length}}
        </div>
        <div ng-click="checkRoom(room.id)" class="joinButton">
          Join Room
        </div>
      </div>
    </div>







    <div id='rooms'></div>

    <div id='addRooms'>
      <button ng-hide="createRoom" id="addRoomsBtn" ng-click="addRoomField()">Create a new game</button>
      <div ng-show="createRoom" id='addRoomConfig'>
        <form ng-submit='addRoom()'>
          <input ng-model='roomName' name='roomName' placeholder='Enter a Room name' type='text'>
          <input type='submit' name='submit' value='submit'>
        </form>
      </div>
    </div>
  </div>
</div>
